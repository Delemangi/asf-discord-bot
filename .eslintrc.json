{
  "env": {
    "es2021": true,
    "node": true
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "extends": [
    "canonical"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "object-curly-newline": [
      "error",
      {
        "multiline": true
      }
    ],
    "func-style": [
      "error",
      "declaration"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "array-bracket-newline": [
      "error",
      "consistent"
    ],
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "no-param-reassign": [
      "off"
    ],
    "import/no-dynamic-require": [
      0
    ],
    "canonical/destructuring-property-newline": [
      0
    ],
    "canonical/id-match": [
      0
    ]
  }
}